          <!-- ============================================================== -->
          <!-- Start Page Content -->
          <!-- ============================================================== -->
          <!-- Row -->
          <div class="row">
            <!-- Column -->
            <div class="col-md-5 m-auto">
              <div class="card">
                <div class="card-body">
                  <center class="m-t-30">
                    <img
                      src="/static/assets/images/users/5.jpg"
                      class="rounded-circle"
                      width="150"
                    />
                    <h4 id="FullName" class="card-title m-t-10"></h4>
                    <h6 id="userRoll" class="card-subtitle"></h6>
                    <a
                      data-toggle="modal"
                      data-target="#passwordModal"
                      class="btn btn-sm btn-danger btn-rounded text-white"
                      >Reset Password</a
                    >
                  </center>
                </div>
                <div>
                  <hr />
                </div>
                <div class="card-body">
                  <small class="text-muted">Email address </small>
                  <h6 id="email"></h6>
                  <small class="text-muted p-t-30 db">User Id</small>
                  <h6 id="userId"></h6>
                  <small class="text-muted p-t-30 db">Create Date</small>
                  <h6 id="createDate"></h6>

                  <div
                    id="passwordModal"
                    class="modal fade"
                    tabindex="-1"
                    role="dialog"
                    aria-labelledby="passwordModalLabel"
                    aria-hidden="true"
                    style="display: none"
                  >
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h4 class="modal-title">Change Password</h4>
                          <button
                            type="button"
                            class="close"
                            data-dismiss="modal"
                            aria-hidden="true"
                          >
                            Ã—
                          </button>
                        </div>
                        <div class="modal-body">
                          <form id="sale-report">
                            <div class="form-group">
                              <label for="old-password" class="control-label"
                                >Password:</label
                              >
                              <input
                                type="password"
                                class="form-control"
                                id="old-password"
                                placeholder="Current Password"
                              />
                            </div>
                            <div class="form-group">
                              <label for="new-password" class="control-label"
                                >New Password:</label
                              >
                              <input
                                type="password"
                                class="form-control"
                                id="new-password"
                                placeholder="New Password"
                              />
                            </div>
                            <div class="form-group">
                              <label
                                for="confirm-password"
                                class="control-label"
                                >Confirm Password:</label
                              >
                              <input
                                type="password"
                                class="form-control"
                                id="confirm-password"
                                placeholder="Confirm Password"
                              />
                            </div>
                          </form>
                        </div>
                        <div class="modal-footer">
                          <button
                            type="button"
                            class="btn btn-danger waves-effect"
                            data-dismiss="modal"
                          >
                            Close
                          </button>
                          <button
                            id="password-btn-submit"
                            type="button"
                            class="btn btn-info waves-effect waves-light"
                          >
                            Change Password
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>

