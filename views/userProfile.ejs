    <!-- All Jquery -->
    <!-- ============================================================== -->
    <%- include('layouts/scriptsLink') %>
    <script src="/static/assets/libs/sweetalert2/dist/sweetalert2.all.min.js"></script>
    <script>
      $(document).ready(() => {
        let user_id = "";
        axios
          .get("/auth/user")
          .then(function (res) {
            $("#FullName").html(res.data.user_name);
            $("#userRoll").html(res.data.roll);
            $("#email").html(res.data.email);
            $("#userId").html(res.data.user_id);
            user_id = res.data.user_id;
            $("#createDate").html(res.data.create_date);
          })
          .catch(function (error) {
            console.error(error.message);
          });

        $("#password-btn-submit").click(() => {
          const formData = {
            userID: user_id,
            newPassword: $("#new-password").val(),
          };
          axios
            .post("/auth/changePassword", formData)
            .then(function (res) {
              if (res.status === 200) {
                swal(
                  "Password Changed!",
                  "Your password has been changed successfully.",
                  "success"
                );
                $("#passwordModal").modal("hide");
              }
            })
            .catch(function (error) {
              console.error(error.message);
            });
        });
      });
    </script>
